{
      "build": {
        "dockerfile": "./Dockerfile"
      },
      "deploy": {
        "startCommand": "/app/start.sh",
        "healthCheck": {
          "path": "/health",
          "port": "$PORT"
        }
      },
      "dependencies": {
        "mysql": {
          "type": "mysql",
          "version": "8.0",
          "persistent": true,
          "as": "DATABASE",
          "exposable": true
        },
        "redis": {
          "type": "redis",
          "version": "latest",
          "required": false,
          "persistent": true,
          "as": "REDIS"
        }
      }
    }